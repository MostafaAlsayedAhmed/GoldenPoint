{
    "kind": "collectionType",
    "collectionName": "about_sections",
    "info": {
        "singularName": "about-section",
        "pluralName": "about-sections",
        "displayName": "About Section",
        "description": "About us / Why choose us sections"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "sectionTitle": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "description": {
            "type": "richtext",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "features": {
            "type": "json"
        },
        "images": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "images"
            ]
        },
        "ctaText": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "ctaLink": {
            "type": "string"
        },
        "order": {
            "type": "integer",
            "default": 0
        },
        "isActive": {
            "type": "boolean",
            "default": true
        }
    }
}