{
    "kind": "collectionType",
    "collectionName": "course_packages",
    "info": {
        "singularName": "course-package",
        "pluralName": "course-packages",
        "displayName": "Course Package",
        "description": "Bundled course packages and subscriptions"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "description": {
            "type": "richtext",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "courses": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::course.course"
        },
        "price": {
            "type": "decimal",
            "required": true
        },
        "currency": {
            "type": "string",
            "default": "EGP"
        },
        "discountedPrice": {
            "type": "decimal"
        },
        "benefits": {
            "type": "json"
        },
        "includes": {
            "type": "json"
        },
        "packageType": {
            "type": "enumeration",
            "enum": [
                "gold",
                "platinum",
                "vip",
                "elite",
                "custom"
            ],
            "default": "gold"
        },
        "icon": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ]
        },
        "badge": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ]
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "order": {
            "type": "integer",
            "default": 0
        },
        "isActive": {
            "type": "boolean",
            "default": true
        }
    }
}