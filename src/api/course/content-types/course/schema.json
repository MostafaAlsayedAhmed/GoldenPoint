{
    "kind": "collectionType",
    "collectionName": "courses",
    "info": {
        "singularName": "course",
        "pluralName": "courses",
        "displayName": "Course",
        "description": "Training programs and courses"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "description": {
            "type": "richtext",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "curriculum": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "duration": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "level": {
            "type": "enumeration",
            "enum": [
                "beginner",
                "intermediate",
                "advanced",
                "expert"
            ],
            "default": "beginner",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "instructor": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::instructor.instructor",
            "inversedBy": "courses",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "price": {
            "type": "decimal",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "currency": {
            "type": "string",
            "default": "EGP",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "includes": {
            "type": "json",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "category": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "thumbnail": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "featured": {
            "type": "boolean",
            "default": false,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "order": {
            "type": "integer",
            "default": 0,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "metaTitle": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "metaDescription": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        }
    }
}