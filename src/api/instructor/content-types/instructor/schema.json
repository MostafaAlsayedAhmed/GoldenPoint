{
    "kind": "collectionType",
    "collectionName": "instructors",
    "info": {
        "singularName": "instructor",
        "pluralName": "instructors",
        "displayName": "Instructor",
        "description": "Course instructors and trainers"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "title": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "credentials": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "bio": {
            "type": "richtext",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "experience": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "achievements": {
            "type": "json"
        },
        "specializations": {
            "type": "json"
        },
        "photo": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ]
        },
        "courses": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::course.course",
            "mappedBy": "instructor"
        },
        "order": {
            "type": "integer",
            "default": 0
        },
        "socialLinks": {
            "type": "json"
        },
        "isActive": {
            "type": "boolean",
            "default": true
        }
    }
}