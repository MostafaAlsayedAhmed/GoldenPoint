{
    "kind": "collectionType",
    "collectionName": "partnerships",
    "info": {
        "singularName": "partnership",
        "pluralName": "partnerships",
        "displayName": "Partnership",
        "description": "Strategic partnerships and collaborations"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "logo": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images"
            ]
        },
        "description": {
            "type": "richtext",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "credentials": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "partnershipType": {
            "type": "enumeration",
            "enum": [
                "strategic",
                "training",
                "platform",
                "certification",
                "sponsor"
            ],
            "default": "strategic"
        },
        "website": {
            "type": "string"
        },
        "isExclusive": {
            "type": "boolean",
            "default": false
        },
        "order": {
            "type": "integer",
            "default": 0
        },
        "isActive": {
            "type": "boolean",
            "default": true
        }
    }
}