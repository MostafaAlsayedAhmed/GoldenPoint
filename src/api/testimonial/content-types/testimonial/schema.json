{
    "kind": "collectionType",
    "collectionName": "testimonials",
    "info": {
        "singularName": "testimonial",
        "pluralName": "testimonials",
        "displayName": "Testimonial",
        "description": "Client testimonials and reviews"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "clientName": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "company": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "content": {
            "type": "text",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "rating": {
            "type": "integer",
            "min": 1,
            "max": 5,
            "default": 5
        },
        "photo": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ]
        },
        "isActive": {
            "type": "boolean",
            "default": true
        },
        "order": {
            "type": "integer",
            "default": 0
        }
    }
}